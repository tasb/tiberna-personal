{
    "final_space": true,
    //"console_title": true,
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "console_title_template": "{{ .Folder }}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "root",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "",
                    "foreground": "#100e23",
                    "background": "#ffe9aa"
                },
                {
                    "type": "session",
                    "background": "#6272a4",
                    "foreground": "#f8f8f2",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": "{{ if .SSHSession }}\uF817 {{ end }}{{ .UserName }}@{{ .HostName }}"
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "invert_powerline": false,
                    "foreground": "#323232",
                    "background": "#8AB7D9",
                    "template": " \ue5ff {{ .Path }} ",
                    "properties": {
                        "style": "folder"
                    }
                },
        /*      {
                    "type": "kubectl",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#ebcc34",
                    "template": " \uFD31 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "
                }, */
                {
                    "type": "git",
                    "style": "powerline",
                    "invert_powerline": false,
                    "foreground": "#ffffff",
                    "background": "#0078D3",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "display_stash_count": true,
                        "display_upstream_icon": false,
                        "branch_icon": "",
                        "display_status": true
                    }
                },
                {
                    "type": "terraform",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#994b2e"
                },
                {
                    "type": "dotnet",
                    "style": "powerline",
                    "invert_powerline": false,
                    "foreground": "#ffffff",
                    "background": "#6CA35E",
                    "powerline_symbol": "\uE0B0",
                    "template": " \uE77F {{ .Full }} ",
                    "properties": {
                        "display_version": true
                    }
                },
                {
                    "type": "az",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#9ec3f0",
                    "template": " \uFD03 {{ .Name }} "
                },
                {
                    "type": "go",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "#007D9C",
                    "template": " {{ .Full }} ",
                    "properties": {
                        "missing_command_text": "Missing command"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
              {
                "type": "text",
                "style": "plain",
                "foreground": "green",
                "template" : "$"
              }
            ]
        }
    ]
}
